<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/share_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_share"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/share_text"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/share_icon"
        app:layout_constraintTop_toTopOf="@id/share_icon"
        app:layout_constraintBottom_toBottomOf="@id/share_icon"
        android:layout_marginStart="16dp"
        android:text="Share"/>

    <View
        android:id="@+id/ripple1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/share_text"
        app:layout_constraintBottom_toBottomOf="@id/share_text"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/link_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_link"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share_icon"
        android:layout_margin="16dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/link_text"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/link_icon"
        app:layout_constraintTop_toTopOf="@id/link_icon"
        app:layout_constraintBottom_toBottomOf="@id/link_icon"
        android:layout_marginStart="16dp"
        android:text="Get link"/>

    <View
        android:id="@+id/ripple2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/link_text"
        app:layout_constraintBottom_toBottomOf="@id/link_text"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/link_icon"
        android:layout_margin="16dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/edit_icon"
        app:layout_constraintTop_toTopOf="@id/edit_icon"
        app:layout_constraintBottom_toBottomOf="@id/edit_icon"
        android:layout_marginStart="16dp"
        android:text="Edit name"/>

    <View
        android:id="@+id/ripple3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_text"
        app:layout_constraintBottom_toBottomOf="@id/edit_text"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_icon"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/delete_text"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/delete_icon"
        app:layout_constraintTop_toTopOf="@id/delete_icon"
        app:layout_constraintBottom_toBottomOf="@id/delete_icon"
        android:layout_marginStart="16dp"
        android:text="Delete collection" />

    <View
        android:id="@+id/ripple4"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/delete_icon"
        app:layout_constraintBottom_toBottomOf="@id/delete_icon"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
