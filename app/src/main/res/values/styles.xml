<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="GlobalTextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="GlobalDrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/black</item>
    </style>

    <style name="GlobalToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="PrimaryTextButtonMaterialButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/colorOnPrimaryOutlinedButton</item>
        <item name="rippleColor">@color/primary_outlined_button_ripple_color</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
=    </style>

    <style name="SecondaryTextButtonMaterialButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/colorOnSecondaryOutlinedButton</item>
        <item name="rippleColor">@color/secondary_outlined_button_ripple_color</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
=    </style>

    <style name="PrimaryOutlinedMaterialButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/colorOnPrimaryOutlinedButton</item>
        <item name="backgroundTint">@color/colorPrimaryOutlinedButton</item>
        <item name="android:textColor">@color/colorOnPrimaryOutlinedButton</item>
        <item name="rippleColor">@color/primary_outlined_button_ripple_color</item>
        <item name="iconTint">@color/colorOnPrimaryOutlinedButton</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
=    </style>

    <style name="SecondaryOutlinedMaterialButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/colorOnSecondaryOutlinedButton</item>
        <item name="backgroundTint">@color/colorSecondaryOutlinedButton</item>
        <item name="android:textColor">@color/colorOnSecondaryOutlinedButton</item>
        <item name="rippleColor">@color/secondary_outlined_button_ripple_color</item>
        <item name="iconTint">@color/colorOnSecondaryOutlinedButton</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PrimaryMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/colorPrimaryButton</item>
        <item name="android:textColor">@color/colorOnPrimaryButton</item>
        <item name="rippleColor">@color/raised_button_ripple_color</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SecondaryMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/colorSecondaryButton</item>
        <item name="android:textColor">@color/colorOnSecondaryButton</item>
        <item name="rippleColor">@color/raised_button_ripple_color</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="GlobalFabButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:fontFamily">@font/roboto_font</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="GlobalEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/colorSecondary</item>
    </style>

    <style name="FilledBoxTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="hintTextColor">@color/colorSecondary</item>
    </style>

    <style name="OutlinedTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="hintTextColor">@color/colorSecondary</item>
    </style>

    <style name="GlobalMaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">2dp</item>
    </style>

    <style name="StrokedMaterialCardViewStyle" parent="GlobalMaterialCardViewStyle">
        <item name="cardCornerRadius">2dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/colorSecondary</item>
    </style>

    <style name="CheckableMaterialCardViewStyle" parent="GlobalMaterialCardViewStyle">
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="checkedIconTint">@color/colorSecondary</item>
        <item name="rippleColor">@color/card_view_ripple_color</item>
    </style>

    <style name="StatusBarStyle" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:statusBarColor">#ffffff</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    </style>

</resources>
